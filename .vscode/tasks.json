{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "make current file",
            "type": "shell",
            "command": "make",
            "options": {
                "cwd": "${workspaceFolder}",
            },
            "args": ["${fileBasenameNoExtension}"]
        },
        {
            "label": "run current file",
            "type": "process",
            "command": "./${fileBasenameNoExtension}",
            "options": {
                "cwd": "${workspaceFolder}/Builds/Linux",
            },
        }
    ]
}